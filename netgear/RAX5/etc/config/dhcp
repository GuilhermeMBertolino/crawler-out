
config dnsmasq
	option domainneeded '1'
	option boguspriv '1'
	option filterwin2k '0'
	option localise_queries '1'
	option rebind_protection '0'
	option rebind_localhost '1'
	option local '/lan/'
	option domain 'lan'
	option expandhosts '1'
	option nonegcache '0'
	option authoritative '1'
	option readethers '1'
	option leasefile '/tmp/dhcp.leases'
	option resolvfile '/tmp/resolv.conf.auto'
	option localservice '1'

config dhcp 'lan'
	option interface 'lan'
	option start '100'
	option limit '150'
	option start_ip '192.168.1.2'
	option end_ip '192.168.1.254'
	option leasetime '24h'
    option dhcpv4 'server'
	option v6_mode 'auto'
	option dhcpv6 'disabled'
	option dhcpv6_na '0'
	option dhcpv6_pd '0'
	option ra 'disabled'
	option ra_maxinterval '600'
	# 198 is to follow the spec
	option ra_mininterval '198'
	option ra_hoplimit '0'
	option ra_management '0'
	option ra_lifetime '1800'
	option ra_reachabletime '0'
	option ra_retranstime '0'
	option ra_offlink '0'
	option ra_mtu '1500'
	option ra_preference 'medium'
	option ra_prefix '1'
	option use_interfaceid 'false'

config dhcp 'wan'
	option interface 'wan'
	option ignore '1'

config odhcpd 'odhcpd'
	option maindhcp '0'
	option leasefile '/tmp/hosts/odhcpd'
	option leasetrigger '/usr/sbin/odhcpd-update'
