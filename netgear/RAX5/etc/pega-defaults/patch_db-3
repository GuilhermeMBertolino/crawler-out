echo "[pega-defaults] patch_db-3 running ..." > /dev/console

# add option for mtu per protocal in /etc/config/network
uci set network.inet_ether.mtu="1500"
uci set network.inet_pppoe.mtu="1492"
uci set network.inet_pptp.mtu="1436"
uci set network.inet_l2tp.mtu="1428"
uci set network.wan.mtu="1500"
uci set network.pptp.mtu="1436"
uci set network.l2tp.mtu="1428"

# add interface lan2 to /etc/config/network
uci set network.lan2=interface
uci set network.lan2.force_link='1'
uci set network.lan2.stp='0'
uci set network.lan2.proto='static'
uci set network.lan2.type='bridge'
uci set network.lan2.ifname='eth0.11'
uci set network.lan2.disabled='1'

# rename @switch_vlan[0] to EtherWan and add or modify options to /etc/config/network
uci rename network.@switch_vlan[0]=EtherWan
uci set network.EtherWan.ports='0 5'
# rename @switch_vlan[1] to Internet and add or modify options to /etc/config/network
uci rename network.@switch_vlan[1]=Internet
uci set network.Internet.enable_rule='1'
uci set network.Internet.name='Internet'
uci set network.Internet.priority='0'
uci set network.Internet.ports='1 2 3 4 6'

# add switch_vlan Bridge to /etc/config/network
uci set network.Bridge=switch_vlan
uci set network.Bridge.name='Bridge'
uci set network.Bridge.device='switch0'
uci set network.Bridge.vlan='11'

# add config_vlan to /etc/config/ucitrack
uci add ucitrack vlan
uci set ucitrack.@vlan[0].init='vlan'

#add for netgear multi-language
uci set netgear.system.gui_language="Auto"
uci set netgear.system.lang_ver="V1.0.0.0"
uci set netgear.fw.max_size="50"

# modify option value for timezone in /etc/config/system
uci set system.@system[0].timezone="<-08>8"
uci set system.@system[0].timezone_name="Pacific_Time"

# Disable rebind_protection of dnsmasq per NTGR PE request
uci set dhcp.@dnsmasq[0].rebind_protection='0'

# add section include to /etc/config/firewall
uci set firewall.dnshijack=include
uci set firewall.dnshijack.path='/etc/firewall.d/dnshijack'
uci set firewall.dnshijack.reload='1'

# Keep last (all commands MUST be before 'exit 0')
exit 0
