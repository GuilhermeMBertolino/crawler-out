echo "[pega-defaults] patch_db-5 running ..." > /dev/console

# add option for hash256 password  in /etc/config/loginpwd
uci set loginpwd.config.hash256password="5e884898da28047151d0e56f8dc6292773603d0d6aabbdd62a11ef721d1542d8"

# add exec option to restart ntpd when ntp settings change
uci set ucitrack.@system[0].exec="/usr/sbin/sysntpd_restart.sh"

# Keep last (all commands MUST be before 'exit 0')
exit 0

