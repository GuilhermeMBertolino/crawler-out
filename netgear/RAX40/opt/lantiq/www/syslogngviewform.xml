<?xml version="1.0" encoding="UTF-8"?>
<view viewid="syslogng" >
<helptext></helptext>
    <header>
	<image>images/icons/system.png</image>
        <name>System Log Configure</name>
        <description>The CPE device provides customized logging the messages to File, Remote, Console, Telnet and Web.</description>
    </header>
    <object title="Syslog Rule" name="Device.DeviceInfo.VendorLogFile.*"  viewtype="form" Type="string" icon="system">
    	<row>
    	 <col>
		<parameter name="X_LANTIQ_COM_Source" type="dropdown" validvalues="kernel,user,both"  writable="true" webname="Log Source" maxlen="64"></parameter>
	 </col>
	 <col>
		<parameter name="X_LANTIQ_COM_Destination" type="dropdown" validvalues="file,console,telnet,remote,program" writable="true" webname="Log Destination" maxlen="64"></parameter>
	 </col>
	</row>
	<row>
	 <col>
        	<parameter name="Name"  type="string" writable="true" parent="'file'" parentname="Device.DeviceInfo.VendorLogFile.*" depends="X_LANTIQ_COM_Destination" placeholder="Enter the Log File Name" webname="File Name" maxlen="64"></parameter>
         </col>
         <col>
        	<parameter name="MaximumSize"  type="string" writable="true" parent="'file'" parentname="Device.DeviceInfo.VendorLogFile.*" depends="X_LANTIQ_COM_Destination" placeholder="Enter size of file in KiB" webname="File Size (in KiB)" maxlen="64"></parameter>
         </col>
        </row>
        <row>
         <col>
        	<parameter name="X_LANTIQ_COM_IpAddress"  type="ipv4" writable="true" parent="'remote'" parentname="Device.DeviceInfo.VendorLogFile.*" depends="X_LANTIQ_COM_Destination" placeholder="Enter Remote IP Address" webname="Remote IP" maxlen="64"></parameter>
         </col>
         <col>
	        <parameter name="X_LANTIQ_COM_Port"  type="string" writable="true" parent="'remote'" parentname="Device.DeviceInfo.VendorLogFile.*" depends="X_LANTIQ_COM_Destination" placeholder="Enter the Port number" webname="Port No" maxlen="64"></parameter>
         </col>
        </row>
        <row>
         <col>
        	<parameter name="X_LANTIQ_COM_Program"  type="string" writable="true" parent="'program'" parentname="Device.DeviceInfo.VendorLogFile.*" depends="X_LANTIQ_COM_Destination" placeholder="Enter the Program Name" webname="Program Name" maxlen="64"></parameter>
         </col>
        </row>
        <row>
         <col>
		<parameter name="X_LANTIQ_COM_LogLevel" type="dropdown" validvalues="emerg,alert,crit,err,warn,notice,info,debug" writable="true" webname="Log Level" maxlen="64"></parameter>
	 </col>
	 <col>
        	<parameter name="X_LANTIQ_COM_FilterString"  type="string" writable="true" required="false" placeholder="Enter filter string matching log messages" webname="Filter String" maxlen="64"></parameter>
         </col>
        </row>
        	<parameter name="X_LANTIQ_COM_LogFilePath"  type="string" writable="true" parent="'file'" parentname="Device.DeviceInfo.VendorLogFile.*" depends="X_LANTIQ_COM_Destination" webname="File Location" Value="/var/log" Display="No" maxlen="128"></parameter>
	        <parameter name="Persistent"  type="checkbox" Display="No" webname="Enable File BackUp"></parameter>
		<parameter name="Add"  action="post" routeurl="Apply($event, 'syslogngview')"  type="submitbutton" webname="Apply" maxlen="64"></parameter>
	        <parameter name="cancel"  action="post" routeurl="Add('syslogngview')"  type="submitbutton" webname="Cancel" maxlen="64"></parameter>
    </object>
</view>

