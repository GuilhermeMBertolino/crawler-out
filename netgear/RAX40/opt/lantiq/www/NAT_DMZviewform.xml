<?xml version="1.0" encoding="UTF-8"?>
    <view viewid="NAT_DMZpage">
        <helptext></helptext>
        <header>
            <image>images/icons/nat.png</image>
            <name>DMZ (Demilitarized Zone)</name>
            <description>If you have a local client PC that cannot run an Internet application properly from behind the NAT firewall, you can open the client up to unrestricted two-way Internet access by defining a virtual DMZ Host.</description>
        </header>
        <object name="Device.NAT.X_LANTIQ_COM_DMZ" viewtype="form" Display="No">
            <parameter name="Enable" type="checkbox" webname="Enable" maxlen="64"></parameter>
        </object>

        <object title="Settings" name="Device.NAT.X_LANTIQ_COM_DMZ" viewtype="form" icon="settings-1">
            <row>
                <col>
                    <parameter name="Enable" required="false" type="checkbox" writable="true" webname="Enable" maxlen="64"></parameter>
                </col>
            </row>
            <row>
                <col>
                    <parameter name="IPAddress" required="false" type="ipv4" writable="true" placeholder="true" webname="IP Address" maxlen="128"></parameter>
                </col>
            </row>
            <object name="Device.X_INTEL_COM.NATLoopback">
                <row>
                    <col>
                        <parameter name="Enable" required="0" type="checkbox" writable="true" webname="NAT Loopback Enable" maxlen="64" dependsonparamvalue="true" dependsonobject="Device.NAT.X_LANTIQ_COM_DMZ" dependsonparam="Enable"></parameter>
                        <parameter name="Enable" required="0" type="checkbox" writable="true" webname="NAT Loopback Enable" maxlen="64" dependsonparamvalue="false" dependsonobject="Device.NAT.X_LANTIQ_COM_DMZ" dependsonparam="Enable" access="readonly"></parameter>
                    </col>
                </row>
                <row>
                    <col>
                        <parameter name="ServerURL" required="true" type="url" writable="true" placeholder="true" webname="Server URL" maxlen="128" dependsonparamvalue="true" dependsonobject="Device.NAT.X_LANTIQ_COM_DMZ" dependsonparam="Enable" requireddependsonobject="Device.X_INTEL_COM.NATLoopback" requireddependsonparam="Enable" requireddependsonparamvalue="1"></parameter>
                        <parameter name="ServerURL" required="false" type="url" writable="true" placeholder="true" webname="Server URL" maxlen="128" dependsonparamvalue="false" dependsonobject="Device.NAT.X_LANTIQ_COM_DMZ" dependsonparam="Enable" access="readonly"></parameter>
                    </col>
                </row>
            </object>


            <parameter name="Modify" type="submitbutton" routeurl="DefaultValuesFormApply($event)" webname="Apply" maxlen="64"></parameter>
        </object>
    </view>
