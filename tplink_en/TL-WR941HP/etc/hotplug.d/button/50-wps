if [ "$ACTION" = "released" -a "$BUTTON" = "wps" ]; then
	if [ "$(uci get factory.factorymode.enable)" = "yes" ]; then
		touch /tmp/button_wps_check
	fi
fi

if [ "$ACTION" = "pressed" -a "$BUTTON" = "wps" ]; then
	if [ "$(uci get factory.factorymode.enable)" = "yes" ]; then
		return
	fi
	echo "" > /dev/console
	echo "WPS PUSH BUTTON EVENT DETECTED" > /dev/console
	for dir in /var/run/hostapd-*; do
		[ -d "$dir" ] || continue
		for vap_dir in $dir/ath*; do
		[ -r "$vap_dir" ] || continue
		config_load wireless
		config_get_bool vap_enable ${vap_dir#"$dir/"} enable 0
		config_get_bool wifi_disabled ${dir#"/var/run/hostapd-"} disabled 0
		config_get_bool disabled_all ${dir#"/var/run/hostapd-"} disabled_all 0
		config_get_bool wps_enabled ${vap_dir#"$dir/"} wps 0
		if [ "$vap_enable" = "0" ] || [ "$wifi_disabled" = "1" ] || [ "$disabled_all" = "1" ] || [ "$wps_enabled" = "0" ]; then
			continue
		fi
		echo "wifi ${vap_dir#"$dir/"} enable" > /dev/console

		hostapd_cli -i "${vap_dir#"$dir/"}" -p "$dir" wps_pbc
		tp_wps_led &
		done
	done

fi
