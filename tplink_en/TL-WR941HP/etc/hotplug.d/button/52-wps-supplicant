WIFI_RE_BUTTON_PID="/var/run/wifi_re_button.pid"

if [ "$ACTION" = "released" -a "$BUTTON" = "re" ]; then
        if [ "$(uci get factory.factorymode.enable)" = "yes" ]; then
            touch /tmp/button_re_check
        fi
        if [ "$SEEN" -lt 2 ]; then
                [ -e ${WIFI_RE_BUTTON_PID} ] && {
                        local pid=$(cat ${WIFI_RE_BUTTON_PID})
                        echo "$ACTION:$BUTTON:$SEEN: Kill pid $pid." > /dev/console
                        [ -n "$pid" ] && kill -9 $pid
                        rm -f ${WIFI_RE_BUTTON_PID}
                }
        fi
fi

if [ "$ACTION" = "pressed" -a "$BUTTON" = "re" ]; then
        if [ "$(uci get factory.factorymode.enable)" = "yes" ]; then
            return
        fi
        /sbin/wifi_re_button &
fi
