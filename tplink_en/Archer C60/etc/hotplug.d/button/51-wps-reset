if [ "$ACTION" = "released" -a "$BUTTON" = "wps" ]; then
	if [ "$(uci get factory.factorymode.enable)" = "yes" -a "$(/sbin/is_cal)" != "true" ]; then
		touch /tmp/button_reset_check
	else
		if [ "$SEEN" -gt 3 ]; then
			echo "" > /dev/console
			echo "RESET TO FACTORY SETTING EVENT DETECTED" > /dev/console
			echo "PLEASE WAIT WHILE REBOOTING THE DEVICE..." > /dev/console
			#nvrammanager -e  -p  user-config  >/dev/null 2>&1
			#nvrammanager -r /tmp/reset-defconfig.xml -p  default-config  >/dev/null 2>&1
			#nvrammanager -w /tmp/reset-defconfig.xml -p  user-config   >/dev/null 2>&1	
			#rm -f /tmp/reset-defconfig.xml >/dev/null 2>&1
			#nvrammanager -e  -p  certificate  >/dev/null 2>&1	
			#rm -rf /overlay/*
			lua -e 'require("luci.controller.admin.firmware").hard_reset()'
		else
			ledcli STATUS_ON
		fi
	fi
fi

if [ "$ACTION" = "pressed" -a "$BUTTON" = "wps" ]; then
	if [ "$(uci get factory.factorymode.enable)" = "yes" -a "$(/sbin/is_cal)" != "true" ]; then
		echo "--> RESET button pressed" > /dev/console
	else
		sleep 4
		ledcli STATUS_BLINK
	fi
fi

