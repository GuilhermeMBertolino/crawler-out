#-----------
# DDOS RULES
#-----------

alert tcp $EXTERNAL_NET any -> $HOME_NET any  (msg:"DDOS TCP SYN Flood"; flags:+SA; classtype:attempted-dos; threshold:type threshold, track by_dst, count 2000, seconds 60; sid:100001201; rev:1;)
alert icmp $EXTERNAL_NET any -> $HOME_NET any  (msg:"DDOS ICMP Flood"; classtype:attempted-dos; threshold:type threshold, track by_dst, count 2000, seconds 60; sid:100001202; rev:1;)
