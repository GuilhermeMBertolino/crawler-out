<?xml version="1.0" encoding="UTF-8"?>
<view viewid="dyndnspage">
    <helptext></helptext>
    <header>
        <name>DYNDNS Settings</name>
        <description>Dynamic DNS allows user to update wan IP address with one or many dynamic DNS services. So anyone can access services on computer using DNS-like address.</description>
    </header>
    <object viewtype="tableaccordion" name="Device.DynamicDNS.Client.*" form="dyndns_client_form" formToOpen="dyndns_host" title="Client Settings">
        <parameter name="Enable"  type="string" webname="Enable" iconicurl="status"></parameter>
        <parameter name="X_LANTIQ_COM_Interface"  type="string" webname="Interface" ></parameter>
        <parameter name="X_LANTIQ_COM_Server"  type="string"  webname="Server" ></parameter>
        <parameter name="edit" action="post" routeurl="dyndnsClientEdit($event,'dyndns_client_form')" type="button" webname="Edit"  maxlen="64"></parameter>
        <parameter name="delete"  action="post" type="button" webname="Delete"  maxlen="64"></parameter>
        <parameter name="Add"  action="post" routeurl="formToOpen('dyndns_client_form')" type="button" webname="Add"  maxlen="64"></parameter>
    </object>
    <object viewtype="table" name="Device.DynamicDNS.Server.*" form="dyndns_server_form" title="Supported Servers"> 
        <parameter name="Enable"  type="string" webname="Enable" iconicurl="status"></parameter>
        <parameter name="Name"  type="string" webname="Name" ></parameter>
        <parameter name="ServiceName"  type="string" webname="ServiceName" ></parameter>
        <parameter name="ServerAddress"  type="string" webname="ServerAddress" ></parameter>
        <parameter name="edit" action="post" routeurl="edit($event,'dyndns_server_form')" type="button" webname="Edit"  maxlen="64"></parameter>
        <parameter name="delete"  action="post" type="button" webname="Delete"  maxlen="64"></parameter>
        <parameter name="Add"  action="post" routeurl="formToOpen('dyndns_server_form')" type="button" webname="Add"  maxlen="64"></parameter>
    </object>
</view>
